---
import type { CollectionEntry } from 'astro:content';
import DateTag from './DateTag.astro';

type Props = { post: CollectionEntry<'blog'> };

const { post } = Astro.props;
---

<a
  href=`/blog/${post.id}`
  class='flex flex-col gap-4 rounded-lg ring-0 cursor-pointer dark:bg-zinc-800/60'
>
  <img
    src={post.data.heroImage}
    alt={post.data.description}
    class='aspect-video w-full rounded-lg object-cover self-auto'
  />
  <div class='flex flex-col gap-2 dark:px-4 pb-2'>
    <div class='flex'>
      <DateTag date={post.data.pubDate} />
    </div>
    <h1
      class='text-2xl font-title font-black text-black dark:text-white'
    >
      {post.data.title}
    </h1>
    <p class='text-sm text-zinc-700 dark:text-gray-300'>
      {post.data.description}
    </p>
  </div>
</a>
