---
import type { CollectionEntry } from 'astro:content';

type Props = { post: CollectionEntry<'blog'> };

const { post } = Astro.props;
---

<a
  href=`/blog/${post.id}`
  class='flex flex-col gap-4 rounded-lg ring-0 cursor-pointer bg-zinc-800/60'
>
  <img
    src={post.data.heroImage}
    alt={post.data.description}
    class='aspect-video w-full rounded-lg object-cover self-auto'
  />
  <div class='flex flex-col gap-2 px-4 pb-2'>
    <p class='text-gray-300'>{post.data.pubDate}</p>
    <h1 class='text-3xl font-title font-black text-white'>{post.data.title}</h1>
    <p class='text-sm text-gray-300'>{post.data.description}</p>
  </div>
</a>
