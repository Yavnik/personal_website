---
type Props = {
  date: Date | string;
};

const { date } = Astro.props;

const formatDate = (date: Date | string) => {
  const dateObj = date instanceof Date ? date : new Date(date);
  return dateObj.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<div class='px-2.5 py-1 rounded-lg text-xs bg-zinc-50'>
  {formatDate(date)}
</div>
